{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "jsx": "react",
    "lib": ["es2015", "esnext.asynciterable", "dom"],
    "module": "esnext",
    "target": "es6",
    "outDir": "dist",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/lib"],
  "exclude": ["public"]
}
